<br />

<div class="booyah-box col-10 offset-1">
  <% current_user.enrolled_courses.each do |course| %>
    <h1>What I'm Learning</h1>
    <br />
    <h3 class="text-center">
      <%= link_to course.title, course_path(course), class: 'course-title' %>
    </h3>
    <br />
    <div class="row-fluid">
      <%= image_tag course.image, class: 'img-fluid' %>
    </div>
    <br />
    <div class="row">
      <div class="col-12 col-sm-8">
        <%= course.description %>
      </div>
      <div class="col-12 col-sm-4 text-center more-details">
        <%= link_to "More Details", course_path(course), class: 'btn btn-lg btn-primary add-buttons' %>
      </div>
    </div>
    <hr class="col-8 offset-2">
    <br class="clr" />
  <% end %>

  <% current_user.courses.each do |course| %>
    <h1>What I'm Teaching</h1>
    <br />
    <h3 class="text-center">
      <%= link_to course.title, course_path(course), class: 'course-title' %>
    </h3>
    <br />
    <div class="row-fluid">
      <%= image_tag course.image, class: 'img-fluid' %>
    </div>
    <br />
    <div class="row">
      <div class="col-12 col-sm-8">
        <%= course.description %>
      </div>

      <div class="col-12 col-sm-4 text-center more-details">
        <%= link_to "More Details", course_path(course), class: 'btn btn-lg btn-primary add-buttons' %>
      </div>
    </div>
    <hr class="col-8 offset-2">
    <br class="clr" />
  <% end %>
</div>