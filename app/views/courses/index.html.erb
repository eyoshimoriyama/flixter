<br />

<div class="booyah-box col-10 offset-1">
  <h1 class="text-center">Learn something today</h1>
  <hr />

  <% @courses.each do |course| %>
    <h2 class="text-center">
      <%= link_to course.title, course_path(course), class: 'course-title' %>
    <br />
    <br class="clr"/>
    <div class="row-fluid">
      <%= image_tag course.image, class: 'img-fluid' %>
    </div>
    </h2>
    <br />
    <div class="row course-description-row">
      <div class="col-sm-8 col-12 course-description">
        <%= course.description %>
      </div>
      <div class="col-sm-3 col-12 text-center more-details">
        <%= link_to 'More Details', course_path(course), class: 'btn btn-primary btn-larg add-buttons' %>
      </div>
    </div>
    <br class="clr" />
  <% end %>
</div>


