<br />

<div class="booyah-box col-10 offset-1">
  <h1><%= current_lesson.title + " - " + current_lesson.subtitle  %></h1>
  <br />
  
  <video id="my-video" class="video-js vjs-default-skin vjs-big-play-centered vjs-fluid" controls preload="auto"
  poster="<%= image_path('black.jpg') %>" data-setup="{}">
    <source src="<%= current_lesson.video.to_s %>" type='video/mp4'>
    <noscript>
      <p class="vjs-no-js">
        To view this video please enable JavaScript, and consider upgrading to a web browser that
        <a href="http://videojs.com/html5-video-support/" target="_blank">supports HTML5 video</a>
      </p>
    </noscript>
  </video>
 
  <% if current_lesson.next_lesson.present? %>
    <%= link_to lesson_path(current_lesson.next_lesson), class: 'btn btn-default float-right next-button' do %>
      Next Lesson &nbsp;
      <span class="fa fa-forward"></span>
    <% end %>
  <% end %>


</div>